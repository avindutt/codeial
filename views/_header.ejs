<header>
    Page Header

    <ul>
        <!-- locals.user and user are same things.. locals is used to that we don't have to declare variable again and again -->
        <% if (locals.user){ %>
            <li><%= user.name %></li>   
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>     
        <% }else{ %>
            <li>
                <a href="/users/sign-in">Sign In</a>
            </li>

            <li>
                <a href="/users/sign-up">Sign Up</a>
            </li>
        <% } %>
    </ul>
</header>